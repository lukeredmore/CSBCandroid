<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#FFFFFF">
    <TextView
            android:text="Girl's Cross-Country vs. Owego Free Academy"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/titleLabel"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-medium" android:textColor="@android:color/black" android:textSize="20sp"/>
    <TextView
            android:text="Varsity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelLabel"
            app:layout_constraintTop_toBottomOf="@+id/titleLabel" android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp" android:textSize="20sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="4:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeLabel"
            app:layout_constraintTop_toBottomOf="@+id/levelLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:textSize="20sp" android:textColor="@android:color/black"
            android:textStyle="italic" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>