<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@android:color/white">
    <TextView
            android:id="@+id/text"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/csbcGray" android:text="Here is some dummy text"
            android:layout_margin="7dp"/>
    <ImageView
            app:srcCompat="@drawable/indicator_arrow"
            android:id="@+id/imageView2"
            android:padding="5dp"
            android:scaleType="centerInside" android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
</LinearLayout>